<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-success" href="/admin/users/new">Novo Usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>E-mail</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%=user.id%></td>
                    <td><%=user.email%></td>
                    <td>
                        <a href="/admin/users/edit/<%=user.id%>" class="btn btn-warning">Editar</a>
                        <form onsubmit="confirmDelete(event, this)" action="/admin/users/delete" method="POST" style="display: inline;">
                            <input type="hidden" name="id" value="<%=user.id%>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer.ejs') %>

<script>
    function confirmDelete(event, form){
        event.preventDefault();
        const decision = confirm("Você quer deletar esta categoria?");
        if(decision){
            form.submit();
        }
    }
</script>